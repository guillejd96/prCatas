<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.decatas">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="18" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".Valorar_Cerveza"
            android:label="@string/title_activity_valorar__cerveza"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".Mis_Catas"
            android:label="@string/title_activity_mis__catas"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Buscar_Cata"
            android:label="@string/title_activity_buscar__cata"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Cata"
            android:label="@string/title_activity_cata"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Nueva_Cata"
            android:label="@string/title_activity_nueva__cata"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Mis_Cervezas"
            android:label="@string/title_activity_mis_cervezas"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Nueva_Cerveza"
            android:label="@string/title_activity_nueva__cerveza"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".User"
            android:label="@string/title_activity_user"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Instrucciones"
            android:label="@string/title_activity_instrucciones"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".NewUser"
            android:label="@string/title_activity_new_user"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Login"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>
    </application>

</manifest>